{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
